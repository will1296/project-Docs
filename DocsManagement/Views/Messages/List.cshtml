@model IEnumerable<DocsManagement.Models.Message>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List Posts</title>
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")" type="text/javascript"></script>
    <style>
        .link-post {
            color: black;
            font-size: 20px;
        }
        .link-posts:hover {
            border: 2px solid blue;
        }
        .delete {
            font-size: 25px;
        }
    </style>
</head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">

                        <div class="col-md-2">
                            <h3> Отправитель</h3>
                        </div>
                        <div class="col-md-2">
                            <h3> Получатель</h3>
                        </div>
                        <div class="col-md-6">
                            <h3> сообщения</h3>
                        </div>
                        <div class="col-md-2">
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                        <div class="col-md-10 link-posts">
                            <a href="/Messages/Details/@item.ID" class="link-post">
                                <div class="col-md-2">
                                    <p> @Html.DisplayFor(modelItem => item.Sender)</p>
                                </div>
                                <div class="col-md-2">
                                    <p> @Html.DisplayFor(modelItem => item.Reciever)</p>
                                </div>
                                <div class="col-md-6">
                                    <p> @Html.DisplayFor(modelItem => item.Message1)</p>
                                </div>
                            </a>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>